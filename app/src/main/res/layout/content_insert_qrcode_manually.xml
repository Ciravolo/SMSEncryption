<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.smsencryption.smsencryption.InsertQRCodeManually"
    tools:showIn="@layout/activity_insert_qrcode_manually">

    <TextView
        android:id="@+id/lblQRCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the QR code received"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/txtQRCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="55dp"
        />

    <Button
        android:id="@+id/btnStartProtocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtQRCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Send" />

</RelativeLayout>