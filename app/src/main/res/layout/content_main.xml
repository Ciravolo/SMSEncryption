<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.smsencryption.smsencryption.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/lblPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the phone number of the recipient"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/txtPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="55dp"
        />

    <TextView
        android:id="@+id/lblMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_height="120dp"
        android:inputType="textPersonName"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:id="@+id/lblGeneratedPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generated PIN"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginTop="250dp"
        />

    <EditText
        android:id="@+id/txtPin"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:layout_marginTop="270dp"
        />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:text="Start"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtPhoneNumber"/>

</RelativeLayout>
