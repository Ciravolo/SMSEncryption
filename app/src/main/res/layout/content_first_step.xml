<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.smsencryption.smsencryption.FirstStepActivity"
    tools:showIn="@layout/activity_first_step">

    <TextView
        android:id="@+id/lblPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the phone number of the recipient"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/txtPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="55dp"
        />

    <TextView
        android:id="@+id/lblNonceReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginTop="120dp"
        android:text="Enter the nonce received"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/txtNonceReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnGetNonce"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginTop="200dp"
        android:text="Get Nonce"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/txtNonce"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lblTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="210dp"
        android:text="Time: "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/lblNonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="230dp"
        android:text="Nonce generated:"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPhoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="Send" />

</RelativeLayout>
