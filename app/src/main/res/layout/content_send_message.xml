<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.smsencryption.smsencryption.SendMessageActivity"
    tools:showIn="@layout/activity_send_message">

    <TextView
        android:id="@+id/lblPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the phone number of the recipient"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_text_bottom"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/txtPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="55dp"
        />


    <TextView
        android:id="@+id/lblEnterMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message: "
        android:textColor="@color/black"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/txtPhoneNumber"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:ems="10"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/lblEnterMessage"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Send"
        android:layout_below="@+id/txtMessage"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
